{
  "name": "react-shimmer-components",
  "description": "Shimmer effects for React Components",
  "author": "John Babs",
  "license": "MIT",
  "version": "1.0.1",
  "repository": "https://github.com/jhony112/react-shimmer-components.git",
  "type": "module",
  "keywords": [
    "shimmer",
    "loader",
    "react-shimmer",
    "shimmer-components",
    "animated-loader",
    "next-shimmer",
    "category-shimmer",
    "table-shimmer",
    "shimmer-content",
    "shimmer-button",
    "shimmer-thumbnail",
    "shimmer-circular-image",
    "social-posts",
    "post-details",
    "shimmer-content-text",
    "shimmer-title",
    "shimmer-section-header",
    "shimmer-gallery",
    "shimmer-sidebar-category",
    "shimmer-post",
    "shimmer-post-list"
  ],
  "main": "./dist/react-shimmer-components.cjs.js",
  "module": "./dist/react-shimmer-components.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-shimmer-components.es.js",
      "require": "./dist/react-shimmer-components.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint-fix": "eslint --fix --ext .js,.jsx .",
    "prettier": "prettier  --check '**/*.js' '**/*.jsx'",
    "prettier-fix": "prettier --write '**/*.js' '**/*.jsx'",
    "preview": "vite preview",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm precommit"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "eslint-plugin-unused-imports": "^3.0.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.66.1",
    "vite": "^4.4.5",
    "vite-plugin-babel-macros": "^1.0.6"
  }
}
